@page
@model Test3.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Index";
}
    <style>
        .grid-container {
  display: grid;
  grid-template-columns: auto auto auto;
  background-color: #2196F3;
  padding: 10px;
}
.grid-item {
  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 20px;
  font-size: 30px;
  text-align: center;
}
    </style>
<h1>Departments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<section class="grid-container">
    @foreach (var item in Model.Department)
    {

    <aside class="grid-item">
        @item.DName | @item.DNumber
        <a asp-page="./Edit" asp-route-id="@item.DID">Edit</a>
        <a asp-page="./Details" asp-route-id="@item.DID">Details</a>
        <a asp-page="./Delete" asp-route-id="@item.DID">Delete</a>

    </aside>
    }
</section>



